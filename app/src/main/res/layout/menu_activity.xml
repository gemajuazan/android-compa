<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="M E N Ãš"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:clickable="true"
            app:cardCornerRadius="500dp"
            app:cardElevation="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:paddingHorizontal="@dimen/button_horizontal_padding"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:text="@string/menu_profile"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:backgroundTint="@color/colorBackgroundWhite"
                app:cornerRadius="64dp"
                app:icon="@drawable/ic_profile"
                app:iconTint="@color/colorPrimary" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:clickable="true"
            app:cardCornerRadius="500dp"
            app:cardElevation="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tasks"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:paddingHorizontal="@dimen/button_horizontal_padding"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:text="@string/menu_tasks"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                app:icon="@drawable/ic_task_24"
                app:iconTint="@color/colorPrimary"
                app:backgroundTint="@color/colorBackgroundWhite"
                app:cornerRadius="64dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:cardCornerRadius="500dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/payments"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:paddingHorizontal="@dimen/button_horizontal_padding"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:text="@string/menu_payments"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                app:icon="@drawable/ic_payment_24"
                app:iconTint="@color/colorPrimary"
                app:backgroundTint="@color/colorBackgroundWhite"
                app:cornerRadius="64dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>