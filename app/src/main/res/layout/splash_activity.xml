<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_color_compa"
    tools:context="org.example.compa.ui.login.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/ic_logo_compa"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_marginTop="16dp"
            app:trackColor="@color/onPrimaryColor"
            app:trackThickness="2dp" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/onPrimaryColor"
            android:layout_marginTop="16dp"
            android:textAllCaps="true"
            android:letterSpacing="0.2"
            android:text="@string/loading_app"/>

    </LinearLayout>

</FrameLayout>